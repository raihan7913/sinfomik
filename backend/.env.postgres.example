# PostgreSQL Configuration Template
# Copy ini ke .env file di backend folder setelah PostgreSQL setup

# Database Configuration - PostgreSQL
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sinfomik
DB_USER=sinfomik_user
DB_PASSWORD=your_secure_password_here

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20

# Server Settings
PORT=5000
NODE_ENV=development

# JWT Settings (existing)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=5h
JWT_WARNING_TIME=1800000

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=2000
RATE_LIMIT_AUTH_MAX=500
